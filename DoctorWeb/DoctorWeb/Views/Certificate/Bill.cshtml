
@{
    ViewBag.Title = "Bill";
    Layout = "~/Views/Shared/_Certificate.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>
    <script src="~/Content/js/certi_jquery.min.js"></script>
    <script src="~/Content/js/certi_bootstrap.min.js"></script>
    <script src="~/Content/js/editor.js"></script>
    <script>

            jQuery.noConflict();
			jQuery(document).ready(function() {
			    jQuery("#txtEditor").Editor();
			    var content = "MAIN BILL			    In the sum of rupees_________ INR(_____________________________________)Received with thanks from			    Mr/Mrs/Miss ______________________________,____YRS			    M/F for the procedure  of ________________________________                at Krishna hospital on __/__/____.";
			    jQuery('.Editor-editor').text(content);
			});
    </script>
    <link href="~/Content/css/certi_bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/certi_font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/editor.css" type="text/css" rel="stylesheet" />

</head>
<body>
    @{
        if (ViewBag.HeaderPhoto != null)
        {
            var base64 = Convert.ToBase64String(ViewBag.HeaderPhoto);
            var imgSrchdr = String.Format("data:image/gif;base64,{0}", base64);
            <img src="@imgSrchdr" style="height:150px; width:100%;" />
        }
    }
    <div class="container-fluid">
        <div class="row">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 nopadding">
                        <textarea id="txtEditor">
                        </textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <span>&copy; Krishna Hospital</span>
    </div>
    <!--footer-->
</body>
</html>



