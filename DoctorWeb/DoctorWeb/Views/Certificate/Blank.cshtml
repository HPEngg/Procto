<!DOCTYPE HTML>
<html>
<head>

    <script src="~/Content/js/certi_jquery.min.js"></script>
    <script src="~/Content/js/certi_bootstrap.min.js"></script>
    <script src="~/Content/js/editor.js"></script>
    <script>
        jQuery.noConflict();
        jQuery(document).ready(function () {
            jQuery("#txtEditor").Editor();
        });
    </script>
    <link href="~/Content/css/certi_bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/certi_font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/editor.css" type="text/css" rel="stylesheet" />
    <style type="text/css">
        #menuBarDiv, #statusbar {
            display:none;
        }

        .Editor-editor {
            max-width:700px;
            height:500px;
        }

         .print_btn {
            width: 105px;
            background: #1665AD;
            border: 0 none;
            color: #fff;
            font-weight: bold;
            border-radius: 1 px;
            margin-top: 9px;
            margin-bottom: 9px;
            margin-left: 0px;
            height: 34px;
            cursor: pointer;
        }

          @@media print {
            input[type=button] {
                visibility: hidden;
            }
        }
    </style>
</head>
<body style="max-width:700px; margin:0 auto; padding-top:10px;">
    @{
        if (ViewBag.HeaderPhoto != null)
        {
            var base64 = Convert.ToBase64String(ViewBag.HeaderPhoto);
            var imgSrchdr = String.Format("data:image/gif;base64,{0}", base64);
            <img src="@imgSrchdr" style="height:150px; width:100%;" />
        }
    }
    <div class="container-fluid">
        <div class="row">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 nopadding" style="max-width:700px;">
                        <textarea id="txtEditor"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="button" value="Print" onClick="window.print()" class="print_btn">
</body>
</html>
