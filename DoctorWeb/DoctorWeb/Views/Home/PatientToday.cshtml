@model IEnumerable<DoctorWeb.Models.CustomModels.PatientToday>
@{
    ViewBag.Title = "Search";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="SearchRecords" class="ui-dialog-content ui-widget-content" style="width: auto; margin-top:20px;max-height: none; height: auto;">

    <table class="table" id="SearchRecords">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                <label>Referred by</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefferalName)
            </th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td style="border:none;">
                    @Html.ActionLink("Select", "Edit", new { id = item.ID })
                </td>
                <td style="border:none;">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td style="border:none;">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="border:none;">
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td style="border:none;">
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td style="border:none;">
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td style="border:none;">
                    @Html.DisplayFor(modelItem => item.MobileNo)
                </td>
                <td style="border:none;">
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td style="border:none;">
                    @Html.DisplayFor(modelItem => item.Reference)
                </td>
                <td style="border:none;">
                    @Html.DisplayFor(modelItem => item.RefferalName)
                </td>
            </tr>
        }
    </table>
</div>