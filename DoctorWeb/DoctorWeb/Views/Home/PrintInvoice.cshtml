@model DoctorWeb.Models.CustomModels.PrintInvoice

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PrintInvoice</title>
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="print_margin fonts_candara">
        @{
            if (Model.HeaderPhoto != null)
            {
                var base64 = Convert.ToBase64String(Model.HeaderPhoto);
                var imgSrchdr = String.Format("data:image/gif;base64,{0}", base64);
                <img src="@imgSrchdr" style="height:150px; width:100%;" />
            }
        }
        <div>
            @{
                if (!string.IsNullOrEmpty(Model.Name))
                {
                    <div class="print_text_padding" style="width:70%">
                        <div class="print_text_fltleft print_heading">
                            @Html.DisplayNameFor(model => model.Name)
                        </div>
                        <div  class="fltleft">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>
                }
            }
            @{
                if (!string.IsNullOrEmpty(Model.TodayDate))
                {
                    <div class="print_text_padding" style="float:right;">
                        <div class="fltleft print_heading">
                            <span>Date</span>
                        </div>
                        <div class="fltleft">
                            @Html.DisplayFor(model => model.TodayDate)
                        </div>
                    </div>
                }
            }
        </div>

        <div style="clear:both; display:block;">
            @{
                if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div class="print_text_padding" style="width:70%">
                        <div class="print_text_fltleft print_heading">
                            @Html.DisplayNameFor(model => model.Address)
                        </div>
                        <div  class="fltleft">
                            @Html.DisplayFor(model => model.Address)
                        </div>
                    </div>
                }
            }
            @{
                if (!string.IsNullOrEmpty(Model.InvoiceNo.ToString()))
                {
                    <div class="print_text_padding" style="float:right;">
                        <div class="fltleft print_heading">
                            <span>Invoice No</span>
                        </div>
                        <div class="fltleft">
                            @Html.DisplayFor(model => model.InvoiceNo)
                        </div>
                    </div>
                }
            }
        </div>
             
        <div id="medicinelist" style="clear:both; display:block;">
            <table width="100%">
                <tr>
                    <th>
                        No
                    </th>
                    <th>
                        Medicine
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Rate
                    </th>
                    <th>
                        Total
                    </th>
                </tr>
                @foreach (var item in Model.Medicines)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OINTMore)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>
                    </tr>
                }
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Consult)
                    </th>
                    <td>@Html.DisplayFor(model => model.Consult)</td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Proctoscopy)
                    </th>
                    <td>@Html.DisplayFor(model => model.Proctoscopy)</td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Dressing)
                    </th>
                    <td>@Html.DisplayFor(model => model.Dressing)</td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.KSProcedure)
                    </th>
                    <td>@Html.DisplayFor(model => model.KSProcedure)</td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Other)
                    </th>
                    <td>@Html.DisplayFor(model => model.Other)</td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Less)
                    </th>
                    <td>@Html.DisplayFor(model => model.Less)</td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                    <td>@Html.DisplayFor(model => model.Total)</td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>
