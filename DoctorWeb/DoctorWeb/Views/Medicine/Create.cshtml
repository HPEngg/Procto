            @Html.LabelFor(model => model.Medicine.IsDayAffected, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Medicine.IsDayAffected)
                    @Html.ValidationMessageFor(model => model.Medicine.IsDayAffected, "", new { @class = "text-danger" })
