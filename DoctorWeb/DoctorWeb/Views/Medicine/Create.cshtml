@model DoctorWeb.Models.CustomModels.MedicineViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Add Medicine</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
