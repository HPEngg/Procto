                @Html.ListBoxFor(model => model.SelectedPrescriptionCategories, Model.PrescriptionsCategories, new { htmlAttributes = new { @size=5, @class = "form-control", @Multiple = "multiple", @style="height:50px !important; width:100% !important;" } })
