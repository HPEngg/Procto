@model IEnumerable<DoctorWeb.Models.Picture>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>List of Images</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Header)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Footer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.Header)*@
            @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Header) + "\" width=100 height=100/>")
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Footer)*@
            @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Footer) + "\" width=100 height=100/>")
        </td>
        <td>
            @Html.ActionLink("Edit", "Create") |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
